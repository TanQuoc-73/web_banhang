<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Ban Hang</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/font/fontawesome-free-6.5.2-web/css/all.min.css">
</head>
<body>


    <div class="header">

        <div class="logo">
            <img src="/image/logoHAU.png" width="50px" alt="logoHAU">
            <h1>HAUSHOP</h1>
        </div>

        <div class="search">
            <input type="text" placeholder="Search">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>  

        <ul>
            <a href="/home">Home</a>
            <a href="/users">User</a>
            <a href="/about">About</a>
        </ul>
    </div>


    <div class="dataTable">
        <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            <% dataUser.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.address %></td>
                    <td><%= user.email %></td>
                    <td>
                            <button type="submit">
                                <a href="/users/detail/<%= user.id%>">Chi tiết</a>
                            </button>
                            <button type="submit">
                                <a href="/users/edit/<%= user.id%>">Sửa</a>
                            </button>
                            <button type="submit">
                                <a href="/users/delete/">Xóa</a>
                            </button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
</body> 
</html>